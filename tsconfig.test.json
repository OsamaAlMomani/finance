{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@components/*": ["src/ui/components/*"],
      "@hooks/*": ["src/ui/hooks/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["tests/**/*", "vitest.config.ts", "src/**/*"]
}
